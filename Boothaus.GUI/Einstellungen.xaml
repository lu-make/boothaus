<dxg:ThemedWindow  xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/core" x:Class="Boothaus.GUI.Einstellungen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boothaus.GUI" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                   mc:Ignorable="d"
        Title="Einstellungen" Height="250" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> 
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Lager">
            <StackPanel>
                <Label Content="Maximale Rumpflänge (m)"  Margin="5,0" />
                <dxe:SpinEdit 
                     EditValue="{Binding MeineMaxLänge}" 
                     MinValue="0"
                     Increment="0.1" 
                     Margin="5"/>
                <Label Content="Maximale Breite (m)"  Margin="5,0" />
                <dxe:SpinEdit 
                     EditValue="{Binding MeineMaxBreite}" 
                     MinValue="0"
                     Increment="0.1" 
                     Margin="5"/>
            </StackPanel>
            
        </GroupBox> 


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button x:Name="OkButton" Margin="5" Command="{Binding OkCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/accept.png"/>
                    <Label Content="OK" Margin="5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="CancelButton" Margin="5" Command="{Binding CancelCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/cancel.png"/>
                    <Label Content="Abbrechen" Margin="5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="ApplyButton" Margin="5" Command="{Binding ApplyCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/disk.png"/>
                    <Label Content="Übernehmen" Margin="5,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        

    </Grid>
</dxg:ThemedWindow>
