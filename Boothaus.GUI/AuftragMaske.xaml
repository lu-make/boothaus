<dx:ThemedWindow xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"   
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        x:Class="Boothaus.GUI.AuftragMaske"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boothaus.GUI"
        mc:Ignorable="d"
        Title="Lagerauftrag" Height="300" Width="500" WindowStartupLocation="CenterOwner"  ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>   
            <ColumnDefinition/>   
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions> 
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/> 
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <StackPanel Name="Bootauswahl" Orientation="Vertical" Grid.Row="0" Grid.ColumnSpan="2">
            <Label Content="Boot" Margin="5,0" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <dxg:LookUpEdit x:Name="Bootliste" 
                                ItemsSource="{Binding AlleBoote, Mode=TwoWay}"
                                SelectedItem="{Binding Boot, Mode=TwoWay}"
                                BorderBrush="{Binding BootauswahlRahmenfarbe}"
                                AutoPopulateColumns="False" 
                                DisplayMember="Name" 
                                ValueMember="Id"
                                IsCaseSensitiveFilter="False"
                                SubstituteDisplayFilter="Bootliste_SubstituteDisplayFilter"
                                Grid.Column="0"
                                Margin="5"
                >
                    <dxg:LookUpEdit.PopupContentTemplate>
                        <ControlTemplate TargetType="ContentControl">
                            <dxg:GridControl x:Name="PART_GridControl">
                                <dxg:GridControl.Columns>
                                    <dxg:GridColumn Header="Kontakt" FieldName="Kontakt" />
                                    <dxg:GridColumn Header="Name" FieldName="Name" />
                                    <dxg:GridColumn Header="Rumpflänge" FieldName="Rumpflänge" />
                                    <dxg:GridColumn Header="Breite" FieldName="Breite" />
                                </dxg:GridControl.Columns>
                            </dxg:GridControl>
                        </ControlTemplate>
                    </dxg:LookUpEdit.PopupContentTemplate>
                </dxg:LookUpEdit>

                <Button Grid.Column="1"  Margin="5" Command="{Binding NeuesBootCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Icons/asterisk_yellow.png"/>
                        <Label Content="Neues Boot" Margin="5,0"/>
                    </StackPanel>
                </Button>
            </Grid>

            <Label x:Name="BootauswahlValidationText" Content="{Binding BootValidationMessage}"  Margin="5,0" /> 
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Label Content="Startdatum"  Margin="5,0"  />
            <dxe:DateEdit x:Name="VonDatumEditor" 
                          Margin="5" 
                          Grid.Column="0" 
                          MaskType="DateOnly" 
                          EditValue="{Binding Von}"  
                          BorderBrush="{Binding DatumauswahlRahmenfarbe}"
                          />
        </StackPanel>


        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
            <Label Content="Enddatum"  Margin="5,0" />
            <dxe:DateEdit x:Name="BisDatumEditor" 
                          Margin="5" 
                          Grid.Column="0" 
                          MaskType="DateOnly" 
                          EditValue="{Binding Bis}"  
                          BorderBrush="{Binding DatumauswahlRahmenfarbe}"
                />
        </StackPanel>

        <TextBlock x:Name="ZeitraumValidationText" 
                   Text="{Binding DatumspaarValidationMessage}"  
                   TextWrapping="Wrap"
                   Grid.Row="2" 
                   Margin="5,0"
                   Grid.ColumnSpan="2"/>  
 
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3" Grid.ColumnSpan="2" Margin="5">
            <Button x:Name="OkButton" IsDefault="True" Margin="5" Command="{Binding OkCommand}" Width="85">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/accept.png"/>
                    <Label Content="OK" Margin="5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="CancelButton"  IsCancel="True" Margin="5" Command="{Binding CancelCommand}" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/cancel.png"/>
                    <Label Content="Abbrechen" Margin="5,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</dx:ThemedWindow>
