<dx:ThemedWindow xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"   
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        x:Class="Boothaus.GUI.AuftragMaske"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boothaus.GUI"
        mc:Ignorable="d"
        Title="Lagerauftrag" Height="250" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>   
            <ColumnDefinition/>   
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions> 
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/> 
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <StackPanel Name="Bootauswahl" Orientation="Vertical" Grid.Row="0" Grid.ColumnSpan="2">
            <Label Content="Boot" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <dxg:LookUpEdit x:Name="Bootliste" 
                                ItemsSource="{Binding AlleBoote}"
                                SelectedItem="{Binding Boot}"
                                BorderBrush="{Binding BootauswahlRahmenfarbe}"
                                AutoPopulateColumns="False" 
                                DisplayMember="Name" 
                                ValueMember="Id"
                                IsCaseSensitiveFilter="False"
                                SubstituteDisplayFilter="Bootliste_SubstituteDisplayFilter"
                                Grid.Column="0"
                                Margin="5"
                >
                    <dxg:LookUpEdit.PopupContentTemplate>
                        <ControlTemplate TargetType="ContentControl">
                            <dxg:GridControl x:Name="PART_GridControl">
                                <dxg:GridControl.Columns>
                                    <dxg:GridColumn Header="Kontakt" FieldName="Kontakt" />
                                    <dxg:GridColumn Header="Name" FieldName="Name" />
                                    <dxg:GridColumn Header="Rumpflänge" FieldName="Rumpflänge" />
                                    <dxg:GridColumn Header="Breite" FieldName="Breite" />
                                </dxg:GridControl.Columns>
                            </dxg:GridControl>
                        </ControlTemplate>
                    </dxg:LookUpEdit.PopupContentTemplate>
                </dxg:LookUpEdit>

                <Button Grid.Column="1" Content="Neu" Margin="5"/>
            </Grid>
            
            <Label x:Name="BootauswahlValidationText" Content="{Binding BootValidationMessage}"/> 
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Label Content="Startdatum" />
            <dxe:DateEdit x:Name="VonDatumEditor" 
                          Margin="5" 
                          Grid.Column="0" 
                          MaskType="DateOnly" 
                          EditValue="{Binding Von}"  
                          BorderBrush="{Binding DatumauswahlRahmenfarbe}"
                          />
        </StackPanel>


        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
            <Label Content="Enddatum" />
            <dxe:DateEdit x:Name="BisDatumEditor" 
                          Margin="5" 
                          Grid.Column="0" 
                          MaskType="DateOnly" 
                          EditValue="{Binding Bis}"  
                          BorderBrush="{Binding DatumauswahlRahmenfarbe}"
                />
        </StackPanel>

        <Label x:Name="ZeitraumValidationText" Content="{Binding DatumspaarValidationMessage}"  Grid.Row="2" Grid.ColumnSpan="2"/>  
 
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3" Grid.ColumnSpan="2" Margin="5">
            <Button x:Name="OkButton" IsDefault="True" Margin="5" Command="{Binding OkCommand}" Width="85">OK</Button>
            <Button x:Name="CancelButton"  IsCancel="True" Margin="5" Command="{Binding CancelCommand}" Width="85">Abbrechen</Button>
        </StackPanel>

    </Grid>
</dx:ThemedWindow>
