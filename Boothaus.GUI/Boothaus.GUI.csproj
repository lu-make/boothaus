<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net9.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWPF>true</UseWPF>
		<ApplicationIcon>Icons\boothaus.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
		<Resource Include="Icons\boothaus.ico" />
	</ItemGroup>
	
	<ItemGroup>
		<SplashScreen Include="boothaus_splash.png" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Bogus" Version="35.6.5" />
		<PackageReference Include="DevExpress.Wpf.ThemesLW" Version="25.1.6" />
		<PackageReference Include="DevExpress.Wpf.Themes.All" Version="25.1.6" />
		<PackageReference Include="devexpress.wpf.grid.core" Version="25.1.6" />
		<PackageReference Include="devexpress.wpf.layoutcontrol" Version="25.1.6" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Boothaus.Domain\Boothaus.Domain.csproj" />
		<ProjectReference Include="..\Boothaus.Services\Boothaus.Services.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Properties\Resources.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>Resources.resx</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="Properties\Resources.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>Resources.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="ViewModels\" />
	</ItemGroup>

</Project>
