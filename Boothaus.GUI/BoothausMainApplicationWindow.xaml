<dx:ThemedWindow xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"    
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        x:Class="Boothaus.BoothausMainApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boothaus" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:viewmodels="clr-namespace:Boothaus.GUI.ViewModels" 
        Title="Boothaus" Height="900" MinHeight="900" Width="1600" MinWidth="1600" Icon="/Icons/boothaus.ico">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Menu Grid.Row="0">
                <MenuItem Header="Datei" />
                <MenuItem Header="Bearbeiten" />
                <MenuItem Header="Ansicht" />
                <MenuItem Header="Hilfe" />
            </Menu>
            <StackPanel Orientation="Horizontal" Grid.Row="1"  Margin="5">
                <Label Content="Saison:" VerticalAlignment="Center" Margin="5"/>
                <dxe:ComboBoxEdit 
                    x:Name="SaisonAuswahl" 
                    ItemsSource="{Binding Saisons}" 
                    SelectedItem="{Binding AusgewählteSaison, Mode=TwoWay}"
                    DisplayMember="Bezeichnung" 
                    Width="100" 
                    Margin="5" 
                    />
                <Button Content="Lagerkalender erzeugen" Margin="5" Command="{Binding LagerkalenderErstellenCommand}"></Button>
                <Button Content="Alles in nächste Saison übernehmen" Margin="5" Command="{Binding InNächsteSaisonDuplizierenCommand}"></Button>
                <Button Content="Lagerkalender zurücksetzen" Margin="5" Command="{Binding ResetZuweisungenCommand}"></Button>
            </StackPanel>
        </Grid>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions> 
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <GroupBox Header="Aufträge"  Grid.Column="0" Grid.Row="1" Margin="5">
                <Grid Name="Auftraglistenbereich"   >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Name="AuftragActions" Grid.Row="0" Orientation="Horizontal">
                        <Button x:Name="AuftragErfassenButton"  Content="Erfassen" Margin="5" Command="{Binding AuftragErfassenCommand}"></Button>
                        <Button x:Name="AuftragBearbeitenButton" Content="Bearbeiten" Margin="5" Command="{Binding AuftragBearbeitenCommand}"></Button>
                        <Button x:Name="AuftragLöschenButton" Content="Löschen" Margin="5" Command="{Binding AuftragLöschenCommand}"></Button>
                    </StackPanel>

                    <dxg:GridControl 
                        x:Name="Auftragliste" 
                        Grid.Row="1" 
                        Margin="5" 
                        ItemsSource="{Binding AuftragListe}" 
                        SelectedItem="{Binding AusgewählterAuftragListeneintrag, Mode=TwoWay}"
                        >
                        <dxg:GridControl.View>
                            <dxg:TableView
                                AllowGrouping="False"
                                AllowDragDrop="True"
                                ShowGroupPanel="False"
                                AutoWidth="True"
                                AllowMasterDetail="False" 
                                AllowEditing="False"  
                                CompleteRecordDragDrop="CompleteRecordDragDrop"
                                StartRecordDrag="StartRecordDrag"
                            />
                        </dxg:GridControl.View>
                        <dxg:GridControl.Columns> 
                            <dxg:GridColumn Header="Boot" Binding="{Binding Modell.Boot}" Width="Auto"/>
                            <dxg:GridColumn Header="Von" Binding="{Binding Modell.Von, StringFormat=dd.MM.yyyy}" Width="Auto"/>
                            <dxg:GridColumn Header="Bis" Binding="{Binding Modell.Bis, StringFormat=dd.MM.yyyy}" Width="Auto"/>
                        </dxg:GridControl.Columns>
                        
                    </dxg:GridControl>
                </Grid>
            </GroupBox>

 
            <GridSplitter Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" ShowsPreview="True" Background="{x:Null}" />

            <GroupBox Header="Lagerübersicht"  Grid.Column="1" Grid.Row="1" Margin="5"> 
                <Grid Name="Lagerbereich" Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ItemsControl ItemsSource="{Binding LagerViewModel.ReihenViewmodels}" Grid.Column="0" VerticalAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="{Binding LagerViewModel.AnzahlLagerreihen}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                                    Grid.Column="0" 
                                    Text="{Binding Displaynummer}" 
                                    VerticalAlignment="Center"
                                    
                                    />
                                    <ItemsControl Grid.Column="1" ItemsSource="{Binding PlatzViewmodels}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Rows="1"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel> 
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="LagerplatzRect" Margin="5"  
                                                            Width="90"
                                                            Height="80"
                                                            CornerRadius="5"
                                                            BorderBrush="{Binding Border}"
                                                            BorderThickness="{Binding BorderThickness}"
                                                            Background="{Binding Hintergrundfarbe}"
                                                            AllowDrop="True" 
                                                            Drop="LagerplatzRect_Drop"
                                                            >
                                                <TextBlock Text="{Binding Anzeigetext}" 
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    TextWrapping="Wrap"
                                                                    Margin="5"
                                                                    Foreground="Black"
                                                                    />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl> 
                            
                    <Border Width="20" 
                        Height="150"  
                        Grid.Column="1"
                        Background="MediumSlateBlue" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Margin="5">

                        <TextBlock Text="Tor"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Foreground="White"/>
                    </Border>
 
                </Grid>
                          
            </GroupBox> 
        </Grid>
    </DockPanel>
</dx:ThemedWindow>
