<dx:ThemedWindow xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"   
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
        x:Class="Boothaus.GUI.Bootverwaltung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Boothaus.GUI" xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                 mc:Ignorable="d"
        Title="Boote" Height="600" Width="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Name="BootActions" Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="BootErfassenButton" Margin="5" Command="{Binding BootErfassenCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/page_white_add.png"/>
                    <Label Content="Erfassen" Margin="5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="BootBearbeitenButton" Margin="5" Command="{Binding BootBearbeitenCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/page_white_edit.png"/>
                    <Label Content="Bearbeiten" Margin="5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="BootLöschenButton" Margin="5" Command="{Binding BooteLöschenCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/page_white_delete.png"/>
                    <Label Content="Löschen" Margin="5,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <dxg:GridControl Grid.Row="1" 
                         x:Name="Bootliste"
                         ItemsSource="{Binding Bootliste}"
                         SelectedItem="{Binding AusgewählterBootlisteneintrag, Mode=TwoWay}"
                         SelectedItems="{Binding AusgewählteBootlisteneinträge, Mode=TwoWay}"
                         SelectionMode="MultipleRow"
                         DeleteKeyBehavior="None"
                         SelectionChanged="Bootliste_SelectionChanged"
                         Margin="5">
            <dxg:GridControl.View>
                <dxg:TableView x:Name="BootTabelle"
                               AllowGrouping="False" 
                               ShowGroupPanel="False"
                               AllowMasterDetail="False" 
                               AutoWidth="True"
                               AllowEditing="False">
                    <dxmvvm:Interaction.Behaviors>
                        <dxmvvm:KeyToCommand KeyGesture="Delete" Command="{Binding DataContext.BooteLöschenCommand, ElementName=BootTabelle}" />
                    </dxmvvm:Interaction.Behaviors>
                </dxg:TableView>
                           
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn Header="Kontakt" Binding="{Binding Kontakt}"/>
                <dxg:GridColumn Header="Name" Binding="{Binding Name}"/>
                <dxg:GridColumn Header="Rumpflänge" Binding="{Binding Rumpflänge}"/>
                <dxg:GridColumn Header="Breite" Binding="{Binding Breite}"/> 
            </dxg:GridControl.Columns> 
        </dxg:GridControl>
    </Grid>
    
    
</dx:ThemedWindow>
