<Window x:Class="Boothaus.GUI.BootMaske"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Boothaus.GUI" mc:Ignorable="d"
        Title="Boot" Height="400" MinHeight="400" Width="500" MinWidth="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Name="Kontakt" Orientation="Vertical" Grid.Row="0" Grid.ColumnSpan="2">
            <Label Content="Kontakt"  Margin="5,0" />
            <TextBox Text="{Binding Kontakt}" 
                     BorderBrush="{Binding KontaktEditRahmenfarbe}"
                     Margin="5"/>
            <Label x:Name="KontaktValidationText" Content="{Binding KontaktValidationMessage}"  Margin="5,0" />

        </StackPanel>


        <StackPanel Name="Name" Orientation="Vertical" Grid.Row="1" Grid.ColumnSpan="2">
            <Label Content="Name"  Margin="5,0" />
            <TextBox Text="{Binding Name}" 
                     BorderBrush="{Binding NameEditRahmenfarbe}" 
                     Margin="5"/>
            <Label x:Name="NameValidationText" Content="{Binding NameValidationMessage}"  Margin="5,0" />

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0">
            <Label Content="Rumpflänge (m)" Margin="5,0" />
            <TextBox
        Text="{Binding Rumpflänge,
                       UpdateSourceTrigger=PropertyChanged,
                       StringFormat=F1,
                       ValidatesOnDataErrors=True}"
        BorderBrush="{Binding DimensionenEditRahmenfarbe}"
        Margin="5"
        />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <Label Content="Breite (m)" Margin="5,0" />
            <TextBox
        Text="{Binding Breite,
                       UpdateSourceTrigger=PropertyChanged,
                       StringFormat=F1,
                       ValidatesOnDataErrors=True}"
                BorderBrush="{Binding DimensionenEditRahmenfarbe}"
                Margin="5"
        />
        </StackPanel>
        
        <Label x:Name="DimensionValidationText" Content="{Binding DimensionValidationMessage}"  Margin="5,0"  Grid.Row="3" Grid.ColumnSpan="2"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="4" Grid.ColumnSpan="2" Margin="5">
            <Button x:Name="OkButton" IsDefault="True" Margin="5" Command="{Binding OkCommand}" Width="85">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/accept.png"/>
                    <Label Content="OK" Margin="5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="CancelButton"  IsCancel="True" Margin="5" Command="{Binding CancelCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/cancel.png"/>
                    <Label Content="Abbrechen" Margin="5,0"/>
                </StackPanel>
            </Button>
        </StackPanel>




    </Grid>
</Window>
